<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zero.sys.mapper.RoleMapper">

    <resultMap id="resultMap" type="com.zero.sys.domain.Role">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>

    <sql id="baseColumn">
        id, `name`, description, create_time, update_time
    </sql>

    <select id="getByUserId" resultMap="resultMap">
        select sr.id, sr.name, sr.description, sr.create_time, sr.update_time
        from sys_role sr
        left join sys_user_role sur on sur.role_id = sr.id
        where 1 = 1
        <if test="userId != null">
            and sur.user_id = #{userId}
        </if>
    </select>


    <select id="getRoleList" resultType="com.zero.sys.domain.Role">
        select sr.id, sr.name, sr.description, sr.create_time, sr.update_time
        from sys_role sr
        where sr.id not in
        (select sur.role_id from sys_user_role sur where sur.user_id = #{userId})
    </select>


</mapper>